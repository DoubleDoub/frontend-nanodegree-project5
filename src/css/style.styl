// variables
//z-index 'namespacing'
$z-app  = 1000
$z-notification = 9000

// reset box-sizing
html {
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
}

*, *:before, *:after {
    -webkit-box-sizing inherit
    -moz-box-sizing inherit
    box-sizing inherit
}

body, html {
    margin 0
    padding 0
    background-color beige
    height 100%
    //full-screen()
    overflow hidden
}

