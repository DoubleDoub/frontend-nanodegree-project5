@media screen and (max-width : 499px) {
    .list {
        //display none
        width 0%
        // transform translateX(-499px)
        transition translate, width 0.5s ease
        overflow hidden
    }
    .list.list-active { 
        width 100%
        // transform translateX(0px)
    }
    .map {
        width 100%
        // tranform translateX (499px)
        transition translate, width 0.5s ease
        
    }
    .map.list-active {
        width 0%
        // transform translateX(0px)
    }
}

@media screen and (min-width : 500px) {
    main {
        flex-container(row, stretch, flex-start, wrap)
    }
    
    .list {
        width 50%
        background-color yellow
        display inline-block
    }
    .map {
        width 50%
        display inline-block
    }
}

.hamburger-menu
{
    width:30px;
    height:5px;
    background-color:#111;
    border-radius:5px;
    position:relative;
}

.hamburger-menu:after, .hamburger-menu:before
{
    content: '';
    width: 100%;
    height:5px;
    background-color:#111;
    position:absolute;
    border-radius:5px;
}

.hamburger-menu:after
{
    top:10px;
}

.hamburger-menu:before
{
    top:20px;
}

$notif-width = 50%
.notification {
    //display none
    position absolute
    top $notif-width
    width $notif-width
    left $notif-width
    transform translateX(100%)
    z-index $z-notification
    background-color red
    transition transform 0.2s
    overflow hidden
}

.showNotification {
    transform translateX(-50%)
}