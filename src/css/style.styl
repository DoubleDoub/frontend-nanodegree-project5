@import "mixins.styl"

// variables
//z-index 'namespacing'
$z-app  = 1000
$z-notification = 9000

// reset box-sizing
html {
    -webkit-box-sizing border-box
    -moz-box-sizing border-box
    box-sizing border-box
}

*, *:before, *:after {
    -webkit-box-sizing inherit
    -moz-box-sizing inherit
    box-sizing inherit
}

body, html {
    margin 0
    padding 0
    background-color beige
    height 100%
    overflow hidden
}

ul {
    margin 0
    padding 0
}

.app {
    full-screen()
    height 100%
    z-index z-app
}

header {
    height 10%
    background-color red
    flex-container(row, center, center, center, nowrap )
}

#menu-button {
    font-size 48px
    flex-grow 1
}

.logo {
    flex-grow 2
}

.offset-1{
    flex-grow 1
}

main {
    flex-container(row, stretch, flex-start, stretch, nowrap)
    height 80%


}
.map {
    height 100%
}

footer {
    height 10%
    background-color lime
}

.list {
    overflow hidden
}

//I can't get it to work with translatex. It is ok on width
//@todo if I have some extra time try it again
@media screen and (max-width : 499px) {
    .list {
        width 0%
        //transform translateX(-499px)
        transition translate, width 0.5s ease
    }
    .list.list-active {
        width 100%
        overflow auto
        
    }
    .map {
        width 100%
        // tranform translateX (499px)
        transition translate, width 0.5s ease
        
    }
    .map.list-active {
        width 0%
        // transform translateX(0px)
    }
}

@media screen and (min-width : 500px) {
    #menu-button {
        display none
    }
    .list {
        width 50%
        overflow auto
    }
    .map {
        width 50%
    }
}

$notif-width = 50%
.notification {
    position absolute
    top $notif-width
    width $notif-width
    left $notif-width
    transform translateX(100%)
    z-index $z-notification
    background-color red
    transition transform 0.2s
    overflow hidden
}

.showNotification {
    transform translateX(-50%)
}

.icon {
    display inline-block
}

.savedGuides {
    // flex-container(row, center, center, center, wrap)
}

.savedGuide {
    margin-right 1rem
    margin-left 1rem
    border-bottom-style solid
    border-color #bdbdbd
}

.guideControl {
}

/*http://stackoverflow.com/questions/10795843/how-to-implement-a-google-suggest-like-input-field*/
.search {
    position relative
    margin-left 1rem
}

#search {
    position: absolute
    top 0
    z-index 11
    background transparent
}

#autoComplete {
    position absolute
    top 0
    z-index 10
    background-color white

}

.infoWindow {
    //prevent infoWindow top from hiding behind
    min-height 300px
    max-height 300px
}